                android:background="@drawable/letter_r"
                android:translationX="32dp" />

            <ImageButton
                android:id="@+id/btn_s"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/letter_s"
                android:translationX="42dp" />

            <ImageButton
                android:id="@+id/btn_t"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/t"
                android:translationX="52dp" />

        </LinearLayout>

        <!--EIGHTH LAYOUT-->
        <!-- Add more layouts as needed -->

        <!--NINTH LAYOUT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationY="12dp">

            <ImageButton
                android:id="@+id/btn_u"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/letter_u"
                android:translationX="12dp" />

            <ImageButton
                android:id="@+id/btn_v"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/v"
                android:translationX="12dp" />

            <ImageButton
                android:id="@+id/btn_w"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/w"
                android:translationX="22dp" />

            <ImageButton
                android:id="@+id/btn_x"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/x"
                android:translationX="32dp" />

        </LinearLayout>

        <!--TENTH LAYOUT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationY="6dp">

            <ImageButton
                android:id="@+id/btn_y"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/y"
                android:translationX="22dp" />

            <ImageButton
                android:id="@+id/btn_z"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/letter_z"
                android:translationX="32dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
