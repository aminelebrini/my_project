<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".list_numActivity">

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#BDB9B9"
        android:padding="20dp"
        android:translationY="7dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/light_blue"
        android:text="Les Nombres"
        android:padding="20dp"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/left_chevron"
        android:translationY="25dp"
        android:translationX="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:translationY="90dp">

        <!--FIRST LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:translationX="-18dp">

            <ImageButton
                android:id="@+id/btn_1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="12dp"
                android:background="@drawable/n1"/>

            <ImageButton
                android:id="@+id/btn_2"
                android:layout_width="95dp"
                android:layout_height="95dp"

                android:background="@drawable/n2"/>

            <ImageButton
                android:id="@+id/btn_3"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="-12dp"
                android:background="@drawable/n3"/>

            <ImageButton
                android:id="@+id/btn_4"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="-12dp"
                android:background="@drawable/n4"/>

        </LinearLayout>

        <!---SECOND LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:translationX="-18dp"
            android:translationY="-12dp">

            <ImageButton
                android:id="@+id/btn_5"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="12dp"
                android:background="@drawable/n5"/>

            <ImageButton
                android:id="@+id/btn_6"
                android:layout_width="95dp"
                android:layout_height="95dp"

                android:background="@drawable/n6"/>

            <ImageButton
                android:id="@+id/btn_7"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="-12dp"
                android:background="@drawable/n7"/>

            <ImageButton
                android:id="@+id/btn_8"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="-12dp"
                android:background="@drawable/n8"/>

        </LinearLayout>

        <!--THIRD LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:translationX="-18dp"
            android:translationY="-25dp">

            <ImageButton
                android:id="@+id/btn_9"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="12dp"
                android:background="@drawable/n9"/>

            <ImageButton
                android:id="@+id/btn_10"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:background="@drawable/n10"
                />

            <ImageButton
                android:id="@+id/btn_20"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="-12dp"
                android:background="@drawable/n20"
                />

            <ImageButton
                android:id="@+id/btn_30"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="-12dp"
                android:background="@drawable/n30"

                />

        </LinearLayout>

        <!--FORTH LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:translationX="-18dp"
            android:translationY="-38dp">

            <ImageButton
                android:id="@+id/btn_40"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="12dp"
                android:background="@drawable/n40"
                />

            <ImageButton
                android:id="@+id/btn_50"
                android:layout_width="95dp"
                android:layout_height="95dp"

                android:background="@drawable/n50"
                />

            <ImageButton
                android:id="@+id/btn_60"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="-12dp"
                android:background="@drawable/n60"
                />

            <ImageButton
                android:id="@+id/btn_70"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="-12dp"
                android:background="@drawable/n70"
                />

        </LinearLayout>

        <!--FIFTH LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:translationX="-18dp"
            android:translationY="-48dp">

            <ImageButton
                android:id="@+id/btn_80"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="12dp"
                android:background="@drawable/n80"
                />

            <ImageButton
                android:id="@+id/btn_90"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="-3dp"
                android:background="@drawable/n90"
                />

            <ImageButton
                android:id="@+id/btn_100"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="-12dp"
                android:background="@drawable/n100"
                />

            <ImageButton
                android:id="@+id/btn_1000"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="-12dp"
                android:background="@drawable/n1000"
                />

        </LinearLayout>

        <!--SIX LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:translationY="-58dp"
            android:translationX="-18dp">

            <ImageButton
                android:id="@+id/btn_10000"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="12dp"
                android:background="@drawable/n10000"
                />

            <ImageButton
                android:id="@+id/btn_1000000"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:translationX="12dp"
                android:background="@drawable/n1000000"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>