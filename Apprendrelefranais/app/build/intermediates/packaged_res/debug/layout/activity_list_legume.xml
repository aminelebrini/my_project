<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".list_legumeActivity">

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#BDB9B9"
        android:padding="20dp"
        android:translationY="7dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/light_blue"
        android:text="Les LÃ©gumes"
        android:padding="15dp"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/left_chevron"
        android:translationY="25dp"
        android:translationX="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:translationY="50dp"
        android:translationX="-4dp">

        <!--FIRST LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-4dp">

            <ImageButton
                android:id="@+id/btn_tomate"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="12dp"
                android:background="@drawable/tom"/>

            <ImageButton
                android:id="@+id/btn_potere"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:background="@drawable/pom"/>

            <ImageButton
                android:id="@+id/btn_oignon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-12dp"
                android:background="@drawable/oig"/>

            <ImageButton
                android:id="@+id/btn_carotte"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-25dp"
                android:background="@drawable/caro"/>


        </LinearLayout>

        <!---SECOND LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-17dp">


            <ImageButton
                android:id="@+id/btn_laitue"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="10dp"
                android:background="@drawable/lai"/>

            <ImageButton
                android:id="@+id/btn_mais"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-1dp"
                android:background="@drawable/mais"/>

            <ImageButton
                android:id="@+id/btn_poivron"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-10dp"
                android:background="@drawable/poiv"/>

            <ImageButton
                android:id="@+id/btn_brocoli"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-25dp"
                android:background="@drawable/broc"/>


        </LinearLayout>

        <!--THIRD LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-28dp">

            <ImageButton
                android:id="@+id/btn_concombre"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="7dp"
                android:background="@drawable/conc"/>

            <ImageButton
                android:id="@+id/btn_champignon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-4dp"
                android:background="@drawable/cham"/>

            <ImageButton
                android:id="@+id/btn_ail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-20dp"
                android:background="@drawable/ail"/>

            <ImageButton
                android:id="@+id/btn_citrouille"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-25dp"
                android:background="@drawable/citr"/>



        </LinearLayout>

        <!--FORTH LAYOUT-->



        <!--FIFTH LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-56dp">

            <ImageButton
                android:id="@+id/btn_aubergine"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="12dp"
                android:background="@drawable/ober"/>

            <ImageButton
                android:id="@+id/btn_choufleur"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-2dp"
                android:background="@drawable/chouf"/>

            <ImageButton
                android:id="@+id/btn_haricots"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-15dp"
                android:background="@drawable/har"/>

            <ImageButton
                android:id="@+id/btn_radis"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-25dp"
                android:background="@drawable/radi"/>
        </LinearLayout>

        <!--SIX LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-70dp">



            <ImageButton
                android:id="@+id/btn_persil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-2dp"
                android:background="@drawable/per"/>

            <ImageButton
                android:id="@+id/btn_piment"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="-15dp"
                android:background="@drawable/pim"/>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>