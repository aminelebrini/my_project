<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".villeActivity">

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#BDB9B9"
        android:padding="20dp"
        android:translationY="7dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/light_blue"
        android:text="La ville"
        android:padding="15dp"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/left_chevron"
        android:translationY="25dp"
        android:translationX="5dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:translationX="-10dp"
        android:translationY="88dp">

        <!--FIRST LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-4dp">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="12dp"
                android:background="@drawable/rue"/>

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:background="@drawable/pass"/>

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-12dp"
                android:background="@drawable/feu"/>


        </LinearLayout>

        <!---SECOND LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-17dp">


            <ImageView
                android:id="@+id/img_4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="12dp"
                android:background="@drawable/banc"/>

            <ImageView
                android:id="@+id/img_5"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-2dp"
                android:background="@drawable/pann"/>

            <ImageView
                android:id="@+id/img_6"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-15dp"
                android:background="@drawable/maiso"/>


        </LinearLayout>

        <!--THIRD LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-28dp">

            <ImageView
                android:id="@+id/img_7"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="12dp"
                android:background="@drawable/arr"/>

            <ImageView
                android:id="@+id/img_8"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="0dp"
                android:background="@drawable/par"/>

            <ImageView
                android:id="@+id/img_9"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-15dp"
                android:background="@drawable/edi"/>



        </LinearLayout>

        <!--FORTH LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-41dp">

            <ImageView
                android:id="@+id/img_10"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="12dp"
                android:background="@drawable/pos"/>

            <ImageView
                android:id="@+id/img_11"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-2dp"
                android:background="@drawable/pospol"/>

            <ImageView
                android:id="@+id/img_12"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-14dp"
                android:background="@drawable/pospomp"/>



        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>