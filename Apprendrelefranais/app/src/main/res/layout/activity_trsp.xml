<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".trspActivity">



    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#BDB9B9"
        android:padding="20dp"
        android:translationY="7dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/light_blue"
        android:text="Le Transport"
        android:padding="15dp"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/left_chevron"
        android:translationY="25dp"
        android:translationX="5dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:translationX="-10dp"
        android:translationY="82dp">

        <!--FIRST LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-4dp">

            <ImageButton
                android:id="@+id/btn_velo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="12dp"
                android:background="@drawable/vel"/>

            <ImageButton
                android:id="@+id/btn_train"
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:background="@drawable/tra"/>

            <ImageButton
                android:id="@+id/btn_voiiture"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-12dp"
                android:background="@drawable/voit"/>


        </LinearLayout>

        <!---SECOND LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-17dp">


            <ImageButton
                android:id="@+id/btn_navire"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="12dp"
                android:background="@drawable/nav"/>

            <ImageButton
                android:id="@+id/btn_avion"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-2dp"
                android:background="@drawable/avi"/>

            <ImageButton
                android:id="@+id/btn_moto"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-15dp"
                android:background="@drawable/mot"/>


        </LinearLayout>

        <!--THIRD LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-28dp">

            <ImageButton
                android:id="@+id/btn_camion"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="12dp"
                android:background="@drawable/cam"/>

            <ImageButton
                android:id="@+id/btn_bus"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-2dp"
                android:background="@drawable/bus"/>

            <ImageButton
                android:id="@+id/btn_helicopterre"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-15dp"
                android:background="@drawable/hele"/>



        </LinearLayout>

        <!--FORTH LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-41dp">

            <ImageButton
                android:id="@+id/btn_voipolice"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="12dp"
                android:background="@drawable/pol"/>

            <ImageButton
                android:id="@+id/btn_campompier"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-2dp"
                android:background="@drawable/pomp"/>

            <ImageButton
                android:id="@+id/btn_ambulance"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-14dp"
                android:background="@drawable/ambu"/>



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>