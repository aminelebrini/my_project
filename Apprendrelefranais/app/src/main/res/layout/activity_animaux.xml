<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".animauxActivity">

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#BDB9B9"
        android:padding="20dp"
        android:translationY="7dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/light_blue"
        android:text="Les Animaux"
        android:padding="15dp"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/left_chevron"
        android:translationX="5dp"
        android:translationY="20dp"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:translationY="90dp"
        android:translationX="-10dp">

        <!--FIRST LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-4dp">

            <ImageButton
                android:id="@+id/btn_chien"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="12dp"
                android:background="@drawable/chien"/>

            <ImageButton
                android:id="@+id/btn_chat"
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:background="@drawable/chat"/>

            <ImageButton
                android:id="@+id/btn_oiseauu"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-12dp"
                android:background="@drawable/ois"/>


        </LinearLayout>

        <!---SECOND LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-17dp">


            <ImageButton
                android:id="@+id/btn_poisson"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="12dp"
                android:background="@drawable/pois"/>

            <ImageButton
                android:id="@+id/btn_souris"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-2dp"
                android:background="@drawable/sou"/>

            <ImageButton
                android:id="@+id/btn_tortue"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-15dp"
                android:background="@drawable/tort"/>


        </LinearLayout>

        <!--THIRD LAYOUT-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:translationY="-28dp">

            <ImageButton
                android:id="@+id/btn_lapin"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="12dp"
                android:background="@drawable/lapin"/>

            <ImageButton
                android:id="@+id/btn_cameleon"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-2dp"
                android:background="@drawable/came"/>

            <ImageButton
                android:id="@+id/btn_peroquet"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="-15dp"
                android:background="@drawable/pir"/>



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>